{
    "compilerOptions": {
      "skipLibCheck": true,
      "outDir": "dist",
      "module": "commonjs",
      "target": "es2019",
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "types": ["node", "jest"],
      "rootDirs": ["src", "test"],
      "baseUrl": "src",
      "paths": {
        "test/*": ["../test/*"],
        "@/*": ["*"]
      }
    },
    "include": ["src", "test"],
    "exclude": ["node_modules"],
  }